<div class="container rent-form">
  <h1>Rent a game</h1>
  <%= form_with(model:[@game, @rent]) do |f| %>
    <%= f.check_box :rent_world%>
    <%= f.label :rent_world %>
    <%= f.check_box :rent_game %>
    <%= f.label :rent_game %>
    <%= f.date_field :return_date, min:Date.today, max:Date.today + 5, strftime: "%d/%m/%Y", class:"check-rent" %>
    <%= f.submit "Submit", class:"btn" %>
  <%end %>
</div>
