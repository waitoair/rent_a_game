<div class="container">
  <h1 style="font-family:'Bebas Neue', cursive;">New Game</h1>
  <%= simple_form_for @game do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :price %>
  <p>This Game has a World? If Yes, check: </p>
  <%= f.check_box :world %>
  <%= f.input :photo, as: :file %>
  <%= f.input :video, as: :file %>
  <%= f.submit class:"btn" %>
  <% end %>
  <%= link_to  "Back to Homepage", root_path, class:"btn" %>
</div>
