<div class="container">
  <h1 style="font-family:'Bebas Neue', cursive;">New Game</h1>
  <%= simple_form_for @game do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :price, input_html: { min: '5.0' } %>
  <p> Does this game have a world? If yes, check:  <%= f.check_box :world %> </p>
  <%= f.input :photo, as: :file %>
  <%= f.input :video, as: :file %>
  <%= f.submit class:"btn" %>
  <% end %>
  <%= link_to  "Back to Homepage", root_path, class:"btn" %>
</div>
