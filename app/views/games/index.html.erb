  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" style="height:300px; object-fit:cover;" src="https://images.unsplash.com/photo-1527896573815-b7dd74893deb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=751&q=80" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style="height:300px; object-fit:cover;" src="https://images.unsplash.com/photo-1555864326-5cf22ef123cf?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=747&q=80" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style="height:300px; object-fit:cover;" src="https://images.unsplash.com/photo-1591462391994-cb7614f54aff?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" alt="Third slide">
