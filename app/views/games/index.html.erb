    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="games d-flex flex-wrap">
    <% @games.each do |game| %>
      <a href="<%=game_path(game)%>">
        <div class="photo-game" style="background-image: url('<%= cl_image_path game.photo.key, height: 300, crop: :fill if game.photo.attached? %>')">
      </div>
      </a>
    <% end %>
  </div>
</div>
